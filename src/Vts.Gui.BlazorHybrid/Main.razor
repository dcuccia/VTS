@inject CounterState CounterState

<ContentView>
    <StackLayout>

        <BlazorWebView VerticalOptions="LayoutOptions.FillAndExpand">
            <Vts.Gui.BlazorHybrid.WebUI.App />
        </BlazorWebView>

    </StackLayout>
</ContentView>

@code {
    protected override void OnInitialized()
    {
        CounterState.StateChanged += StateHasChanged;
    }

    public void Dispose()
    {
        CounterState.StateChanged -= StateHasChanged;
    }
}
